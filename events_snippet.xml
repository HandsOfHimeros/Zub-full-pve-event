<!-- 
=================================================================
EVENTS.XML SNIPPET - Military Zombie Horde with Vehicle
=================================================================

INSTRUCTIONS:
1. Open your existing events.xml file
2. Find the closing </events> tag at the bottom
3. Add this code BEFORE the closing </events> tag
4. Save the file

WHAT THIS ADDS:
- InfectedArmyHard-Zub: 50 military zombies, 2-hour lifetime, 30-min respawn
- VehicleOffroad02Custom: Offroad02 vehicle with enhanced settings
-->

    <!-- CUSTOM MILITARY ZOMBIE HORDE EVENT -->
    <event name="InfectedArmyHard-Zub">
        <nominal>50</nominal>
        <min>40</min>
        <max>50</max>
        <lifetime>7200</lifetime>
        <restock>1800</restock>
        <saferadius>0</saferadius>
        <distanceradius>0</distanceradius>
        <cleanupradius>0</cleanupradius>
        <flags deletable="0" init_random="0" remove_damaged="0"/>
        <position>fixed</position>
        <limit>mixed</limit>
        <active>1</active>
        <children>
            <child lootmax="0" lootmin="0" max="10" min="8" type="ZmbM_SoldierNormal"/>
            <child lootmax="0" lootmin="0" max="8" min="6" type="ZmbM_SoldierAlice"/>
            <child lootmax="0" lootmin="0" max="8" min="6" type="ZmbM_SoldierHelmet"/>
            <child lootmax="0" lootmin="0" max="8" min="6" type="ZmbF_SoldierNormal"/>
            <child lootmax="0" lootmin="0" max="8" min="6" type="ZmbF_SoldierSurvivor"/>
            <child lootmax="0" lootmin="0" max="10" min="8" type="ZmbM_usSoldier_normal_Woodland"/>
        </children>
    </event>

    <!-- CUSTOM VEHICLE SPAWN EVENT -->
    <event name="VehicleOffroad02Custom">
        <nominal>1</nominal>
        <min>1</min>
        <max>1</max>
        <lifetime>388000</lifetime>
        <restock>0</restock>
        <saferadius>500</saferadius>
        <distanceradius>500</distanceradius>
        <cleanupradius>200</cleanupradius>
        <flags deletable="0" init_random="0" remove_damaged="1"/>
        <position>fixed</position>
        <limit>child</limit>
        <active>1</active>
        <children>
            <child lootmax="0" lootmin="0" max="1" min="1" type="Offroad_02"/>
        </children>
    </event>
